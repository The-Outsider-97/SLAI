{
  "hyperparameters": [
    {
      "name": "learning_rate",
      "type": "float",
      "min": 0.0001,
      "max": 0.1,
      "prior": "log-uniform"
    },
    {
      "name": "num_layers",
      "type": "int",
      "min": 1,
      "max": 10
    },
    {
      "name": "batch_size",
      "type": "int",
      "min": 16,
      "max": 256
    },
    {
      "name": "optimizer",
      "type": "categorical",
      "choices": ["adam", "sgd", "rmsprop"]
    },
    {
      "name": "activation",
      "type": "categorical",
      "choices": ["relu", "tanh", "sigmoid"]
    },
    {
      "name": "dropout_rate",
      "type": "float",
      "min": 0.0,
      "max": 0.5
    },
    {
      "name": "gamma",
      "type": "float",
      "min": 0.8,
      "max": 0.999
    }
  ]
}
